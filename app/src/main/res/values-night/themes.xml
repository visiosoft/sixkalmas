<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SixKalmas" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/secondary_light</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/primary_dark</item>
        <item name="colorSurface">@color/primary</item>
        <item name="colorError">@color/error</item>
        
        <!-- Typography -->
        <item name="android:fontFamily">@font/amiri</item>
        <item name="fontFamily">@font/amiri</item>
        
        <!-- Custom styles -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.App.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.App.HeadlineMedium</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.App.BodyLarge</item>
    </style>

    <!-- Custom card style for dark theme -->
    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/primary</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="contentPadding">16dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/secondary_light</item>
    </style>

    <!-- Custom button style for dark theme -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <!-- Typography styles for dark theme -->
    <style name="TextAppearance.App.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">@font/amiri</item>
        <item name="android:fontFamily">@font/amiri</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.App.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="fontFamily">@font/amiri</item>
        <item name="android:fontFamily">@font/amiri</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.App.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/amiri</item>
        <item name="android:fontFamily">@font/amiri</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>